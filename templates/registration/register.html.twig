{% extends 'base.html.twig' %}

{% block title %}Création de compte utilisateur{% endblock %}

{% block body %}

    <div class="container register-form">
        <div class="register-title mt-5">
            <h1>Création de compte utilisateur</h1>
        </div>

        <div class="form-register">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nickname) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.mail) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}

                <div class="form-button">
                    <button type="submit" class="btn btn-success">Créer le compte</button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="account-created-resp">
                <a href="{{ path('app_login') }}">Vous avez déjà un compte ?</a>
            </div>
        </div>
    </div>
{% endblock %}
